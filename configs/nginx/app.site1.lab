# HTTP -> HTTPS
server {
    listen 80;
    server_name app.site1.lab;
    return 301 https://$host$request_uri;
}

# HTTPS reverse proxy -> srv-core:8080
server {
    listen 443 ssl;
    server_name app.site1.lab;

    ssl_certificate     /etc/nginx/tls/app.site1.lab.crt;
    ssl_certificate_key /etc/nginx/tls/app.site1.lab.key;

    # headers de base (comme site1)
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header Referrer-Policy "no-referrer" always;
    add_header Content-Security-Policy "default-src 'self';" always;
    add_header Strict-Transport-Security "max-age=15552000" always;

    location / {
        proxy_pass http://192.168.56.10:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
